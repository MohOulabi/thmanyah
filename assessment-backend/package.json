{
  "name": "assessment-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:clear-cache": "tsx src/db/clear-cache.ts"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^12.0.1",
    "@fastify/postgres": "^6.0.0",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/sensible": "^6.0.2",
    "@thamanyah/shared-types": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
